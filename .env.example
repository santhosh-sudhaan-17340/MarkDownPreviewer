# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/parcel_locker_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parcel_locker_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Locker Configuration
DEFAULT_RESERVATION_MINUTES=15
PARCEL_EXPIRY_DAYS=3
PICKUP_CODE_LENGTH=6
MAX_PICKUP_ATTEMPTS=3

# Admin Portal
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Health Check Intervals (minutes)
HEALTH_CHECK_INTERVAL=5
RESERVATION_CLEANUP_INTERVAL=2
