# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=leaderboard_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for caching and real-time features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_change_this_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cheat Detection Thresholds
CHEAT_DETECTION_ENABLED=true
CHEAT_SPEED_THRESHOLD=0.3
CHEAT_ACCURACY_THRESHOLD=0.98
CHEAT_PATTERN_WINDOW_HOURS=24
CHEAT_MAX_COMPLETIONS_PER_HOUR=20

# Notification Configuration
NOTIFICATION_RANK_CHANGE_THRESHOLD=10
NOTIFICATION_ENABLED=true

# Leaderboard Cache TTL (seconds)
CACHE_GLOBAL_RANKING_TTL=300
CACHE_GROUP_RANKING_TTL=180
CACHE_USER_STATS_TTL=60

# Streak Configuration
STREAK_GRACE_PERIOD_HOURS=4
STREAK_BONUS_POINTS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
